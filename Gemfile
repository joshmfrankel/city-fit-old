source 'https://rubygems.org'

gem 'rails', '4.2.0.rc1'
gem 'sass-rails', '~> 4.0'
gem 'uglifier', '>= 1.3.0'
gem 'coffee-rails', '~> 4.1.0'
gem 'jquery-rails'
gem 'turbolinks'
gem 'jbuilder', '~> 2.0'
gem 'sdoc', '~> 0.4.0', group: :doc

# Bootstrap
gem 'bootstrap-sass'

# Has_secure_password
gem 'bcrypt'

# XML parser
gem 'nokogiri'

# Api
gem 'indeed-ruby'

group :development, :test do
  gem 'sqlite3'
  gem 'byebug'
  gem 'web-console'
end

group :test do
  gem 'minitest-reporters'
  gem 'mini_backtrace'
  gem 'libnotify' # Notifications
  gem 'guard' # Guard to use libnotify properly
  gem 'guard-minitest'
  gem 'spring' # spring server
end

# Heroku gems
group :production do
  gem 'pg'
  gem 'rails_12factor'
end
